%pre {{customer}}
%h3{"ng-init"=>"refreshUser()"} {{customer.email}}
%h3 Payment Accounts
.well
  .panel.panel-default{"ng-repeat"=>"account in customer.payment_accounts | orderBy: id"}
    .panel-heading.clearfix 
      %strong [{{account.account_type}}]
      {{account.name}}
      %button.pull-right.btn.btn-dafault{"ng-click"=>"transaction_history(account)"} Transaction History
    .panel-body 
      ${{account.current_balance | number : 2}}
      .pull-right
        %button.btn.btn-success{"ng-click"=>"credit_debit(account)"} Credit/Debit
        %button.btn.btn-primary{"ng-click"=>"transfer(account)"} Transfer
        %button.btn.btn-danger{"ng-click"=>"delete_account(account)"} Delete

%button.btn.btn-success{"ng-click"=>"create_account()"} Create An Account
%button.btn.btn-default{"ng-click"=>"cancel()"} Back To Listing

%br
